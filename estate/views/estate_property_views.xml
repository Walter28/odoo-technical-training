<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

       <!-- search view and filters -->
        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.view.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Search Property">
                    <field name="name" />
                    <field name="expected_price" />
                    <field name="bedrooms" />
                    <field name="facades" />
                    <field name="living_area" />

                    <field name="state" invisible="1" />
                    <field name="post_code"/>
                    <!-- The filter within the *Filter* section of the search bar -->
                    <filter name="filter_state_name" string="New Properties" domain="[('state', '=', 'new')]" />
                    <filter name="filter_state_received" string="Offer Received" domain="[('state', '=', 'received')]" />
                    <!-- The filter within the *Group_by* section of the search bar -->
                    <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'post_code'}" />
                </search>
            </field>
        </record>

        <!-- the form view of one record -->
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.view.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_decline" type="object" class="btn btn-danger">Cancel</button>
                        <button name="action_sell" type="object" class="btn btn-primary">Sold</button>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name" />
                            </div>
                            <h1 class="mb32">
                                <field name="name" class="mb16" />
                                <field name="property_tag_ids" widget="many2many_tags"/>
                            </h1>
                            <field name="active" invisible="1" />
                        </div>
                        <group>
                            <group>
                                <field name="property_type_id" />
                                <field name="post_code" />
                                <field name="date_availability" />
                            </group>
                            <group>
                                <field name="expected_price" />
                                <field name="selling_price" />
                                <field name="best_offer" readonly="True" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" />
                                    <field name="garden_orientation" />
                                    <field name="total_area" readonly="1" />
                                </group>
                            </page>
                            <page string="Offers">
                                    <field name="offer_ids">
                                        <tree editable="bottom">
                                            <field name="price" />
                                            <field name="res_partner_id" />
                                            <field name="create_date" />
                                            <field name="validity" />
                                            <field name="deadline" />
                                            <button icon="fa-check" type="object" name="action_accept" />
                                            <button icon="fa-close" type="object" name="action_refuse" />
                                            <field name="status" nolabel="0" />
                                        </tree>
                                    </field>
                            </page>
                            <page string="Other infos">
                                <group>
                                    <field name="res_users_id" />
                                    <field name="res_partner_id" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>


                </form>
            </field>
        </record>

        <!-- tree view for all ours record -->
        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.view.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="post_code" />
                    <field name="bedrooms" />
                    <field name="property_type_id" />
                    <field name="living_area" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <field name="date_availability" />
                </tree>
            </field>
        </record>

        <!-- button for advertisements view -->
        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property to Advertise
                </p>
            </field>
        </record>

    </data>
</odoo>
